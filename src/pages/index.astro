---
//Components
import Layout from "@layout/Default.astro";
import PageHeader from "@components/PageHeader.astro";

---

<Layout>
    <main>
        <PageHeader>
            <h1>
                <span class="wrwr">wuruwuru</span> is a network for independent creators.
            </h1>
        </PageHeader>
        <section class="l-container">
			<h4 class="c-section-title">Start Here</h4>
            <ul class="l-grid">
                <li class="l-grid__column--3">
                    <img src="/assets/images/shapes/triangle.png" />
                    <a href="/projects" class="button">Read manifesto</a>
                </li>
                <li class="l-grid__column--3">
                    <img src="/assets/images/shapes/star.png" />
                    <a href="/projects" class="button">Browse projects</a>
                </li>
                <li class="l-grid__column--3">
                    <img src="/assets/images/shapes/circle.png" />
                    <a href="/creators" class="button">Browse creators</a>
                </li>
                <li class="l-grid__column--3">
                    <img src="/assets/images/shapes/square.png" />
                    <a href="/projects" class="button">Read journal</a>
                </li>
            </ul>
        </section>
    </main>
</Layout>

<style lang="scss">
    @import "../styles/mixins.scss";

    main {
        animation: fadeIn linear 0.3s;
    }

    @keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }
</style>
