---
export interface Props {
    id: string,
    className?: string
}

const { id, className = "", ...props } = Astro.props;
---
<article data-id={id} class={`${className} slides__slide`} {...props}>
    <slot/>
</article>

<style>
    .slides__slide{
        scroll-snap-align: start;
        scroll-snap-stop: always;
        overflow-y: auto;
        width: 100vw;
        max-block-size: 100%;
        flex-shrink: 0;
    }
</style>