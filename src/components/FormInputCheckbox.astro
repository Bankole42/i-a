---
export interface Props {
  value: boolean,
  label: string,
  id: string
}

const {
  id = Math.random(),
  label = 'Placeholder',
  value = false,
} = Astro.props;
---

<label class="label">
  <input type="checkbox" checked={value} name={id} id={id} />
  <div class="indicator"></div>
  {label}
</label>
<style lang="scss">
  label {
    font-family: var(--font-sans-mono);
    font-size: 1.8rem;
    font-weight: 400;
    cursor: pointer;
    user-select: none;
    position: relative;
    display: flex;
    flex-flow: row nowrap;
    align-items: stretch;

    &:hover {
      .indicator::before {
        opacity: .3;
        visibility: visible;
      }
    }

    input {
      visibility: hidden;
      appearance: none;
      position: absolute;
      height: 0;
      width: 0;

      &:checked+.indicator::after {
        opacity: .8;
      }
    }

    .indicator {
      max-width: 2.4rem;
      max-height: 2.4rem;
      border: 1px solid var(--color-black);
      margin-inline-end: 8px;
      position: relative;
      pointer-events: none;
      flex-shrink: 0;
      flex-basis: 100%;

      &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-color: var(--color-black);
        opacity: 0;
        pointer-events: none;
        outline: 2px solid;
        outline-offset: 1px;
        transition: .3s ease opacity;
        visibility: hidden;
      }

      &::after {
        content: 'X';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
        text-align: center;
        opacity: 0;
        line-height: calc(2.1rem / 1.8rem);
      }
    }
  }
</style>