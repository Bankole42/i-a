---
//Components
import ProjectSlide from "@components/ProjectSlide.astro";

//Assets
import blunt from "@project-images/jguide/slide-3.png"

const { id } = Astro.props
---
<ProjectSlide id={id} className="slide">
    <img src={blunt} class="slide__image" alt="Blunt">
</ProjectSlide>
<style>
    .slide{
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .slide__image{
        width: 62.5%;
        max-width: 1200px;
    }

    @media (max-width: 600px){
        .slide__image{
            width: 100%;
        }
    } 
</style>