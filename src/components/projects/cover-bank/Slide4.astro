---
//Components
import ProjectSlide from "@components/ProjectSlide.astro";

//Assets
import instagram from "@images/icons/instagram.svg"
import link from "@images/icons/link.svg"
import twitter from "@images/icons/twitter.svg"
import coverImage from "@project-images/cover-bank/cover-bank.png"
import coverImageMobile from "@project-images/cover-bank/cover-bank-mobile.png"
import logo from "@images/logo.png"

const { id } = Astro.props
---
<ProjectSlide id={id} className="slide">
    <section class="browse-section">
        <ul class="sidebar">
            <li>
                <a href="" class="sidebar__link">
                    About
                </a>
            </li>
            <li>
                <a href="" class="sidebar__link">
                    Journal
                </a>
            </li>
            <li>
                <a href="" class="sidebar__link">
                    People
                </a>
            </li>
        </ul>
        <button class="browse-section__button" href="#details">
            BROWSE THE DATABASE
        </button>
        <button class="browse-section__details" href="#details">
            <span>Details</span>
            <svg width="16" height="21" viewBox="0 0 16 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M2.10742 13.1418L7.99981 19.0342L13.8922 13.1418" stroke="white" stroke-width="2.35695" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M8 18.1005V2" stroke="white" stroke-width="2.68342" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
    </section>
    <section class="details">
        <nav class="details__mobile-nav">
            <img src={logo} alt="Wuruwuru" class="details__mobile-nav-logo">
            <svg width="21" height="13" viewBox="0 0 21 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                <line x1="0.304688" y1="1.5" x2="20.3047" y2="1.5" stroke="black" stroke-width="3"/>
                <line x1="0.304688" y1="11.5" x2="20.3047" y2="11.5" stroke="black" stroke-width="3"/>
            </svg>
        </nav>
        <header class="details__header">
            <div>
                <h1 class="details__title">
                    COVER BANK
                </h1>
                <h4 class="details__category">
                    Database
                </h4>
            </div>
            <div class="details__share is-desktop">
                <p class="details__share-text">
                    Share:
                </p>
                <img src={twitter} alt="Share to twitter"/>
                <img src={instagram} alt="Share to instagram"/>
                <img src={link} alt="Copy link"/>
            </div>
        </header>
        <p class="details__description">
            Cover Bank is a retrospective of Nigerian Album Art. It is a documentation of how the production process of album cover art in Nigeria has evolved over time. 
            <br/>
            <br/>
            The album covers go back as far as 40 years ago, and the database currently holds a total of 5000 covers. Out of those 5000 covers, we identified 577 designers for 2704 covers.
            <br/>
            <br/>
            This database aims to document the history of album covers and spotlight the designers since a majority of Artists donâ€™t cite them as part of their projects.
            <br/>
            <br/>
            We see the opportunity to open the database up for contributions and reviews. For now, we only tag each album cover by artist, year, format and genre. We hope to build a model that tags the images by colour, and subject and find a way to scrape the internet for more
        </p>
        <figure class="details__image_wrapper is-desktop">
            <img src={coverImage} alt="Cover Bank Airtable" class="details__image"/>
            <figcaption class="details__image-cta">
                View larger version
            </figcaption>
        </figure>
        <figure class="details__image_wrapper is-mobile">
            <img src={coverImageMobile} alt="Cover Bank Airtable" class="details__image"/>
            <figcaption class="details__image-cta">
                View larger version
            </figcaption>
        </figure>
        <div class="details__share is-mobile">
            <p class="details__share-text">
                Share:
            </p>
            <img src={twitter} alt="Share to twitter"/>
            <img src={instagram} alt="Share to instagram"/>
            <img src={link} alt="Copy link"/>
        </div>
    </section>
</ProjectSlide>
<style>
    .slide{
        scroll-behavior: smooth;
    }

    .sidebar{
        display: flex;
        flex-direction: column;
        position: absolute;
        top: 114px;
        left: 16px;
        row-gap: 20px;
    }

    .sidebar__link{
        font-size: 18px;
        line-height: 23px;
        color: #FFFFFF;
        text-decoration: none;
    }

    @media(max-width: 600px){
        .sidebar{
            display: none;
        }
    }

    .browse-section{
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100%;
        position: relative;
    }

    .browse-section__button{
        width: 200px;
        height: 200px;
        border: 2px solid #FFFFFF;
        border-radius: 50%;
        padding: 55px 35px;
        font-weight: 400;
        font-size: 48px;
        line-height: 45px;
        text-align: center;
        color: #FFFFFF;
        font-family: 'Soehne Schmal';
        text-decoration: none;
        background: transparent;
    }

    .browse-section__details{
        display: flex;
        flex-direction: column;
        align-items: center;
        row-gap: 14px;
        font-weight: 400;
        font-size: 18px;
        line-height: 21px;
        text-align: center;
        color: #FFFFFF;
        position: absolute;
        bottom: 58px;
        left: 50%;
        transform: translateX(-50%);
        text-decoration: none;
        background: transparent;
        border: none;
    }

    .details{
        padding: 100px 107px 80px 141px;
        background-color: white;
    }

    @media (max-width: 600px){
        .details{
            padding: 45px 18px 60px 15px;
        }
    }

    .details__header{
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        margin-bottom: 60px;
    }

    @media(max-width: 600px){
        .details__header{
            margin-bottom: 30px;
        }
    }
    

    .details__title{
        font-weight: 400;
        font-size: 34px;
        line-height: 40px;
        color: #000000;
        margin: 0 0 8px;
    }

    @media(max-width: 600px){
        .details__title{
            font-size: 28px;
            line-height: 33px;
            margin-bottom: 5px;
        }
    }

    .details__category{
        font-weight: 400;
        font-size: 18px;
        line-height: 21px;
        color: #938888;
        margin: 0;
    }

    @media(max-width: 600px){
        .details__category{
            font-size: 18px;
            line-height: 21px;
        }
    }

    .details__share{
        display: flex;
        align-items: center;
        column-gap: 20px;
    }

    .details__share.is-mobile{
        display: none;
    }

    @media(max-width: 600px){
        .details__share.is-desktop{
            display: none;
        }

        .details__share.is-mobile{
            display: flex;
        }
    }

    .details__share-text{
        font-family: 'Inter';
        font-style: normal;
        font-weight: 400;
        font-size: 20px;
        line-height: 24px;
        color: #000000;
        margin: 0;
    }

    @media(max-width: 600px){
        .details__share-text{
            font-size: 18px;
            line-height: 22px;
        }
    }

    .details__description{
        width: 703px;
        max-width: 80%;
        margin-bottom: 60px;
        font-weight: 400;
        font-size: 20px;
        line-height: 23px;
        color: #000000;
        margin: 0 0 60px;
    }

    @media(max-width: 600px){
        .details__description{
            width: 100%;
            max-width: unset;
            font-size: 16px;
            line-height: 19px;
        }
    }

    .details__image_wrapper{
        width: 55%;
        max-width: 838px;
    }

    .details__image_wrapper.is-mobile{
        display: none;
        width: 100%;
        max-width: unset;
        margin-bottom: 60px;
        padding: 0 8px;
    }

    @media(max-width: 600px){
        .details__image_wrapper.is-desktop{
            display: none;
        }

        .details__image_wrapper.is-mobile{
            display: block;
        }
    }

    .details__image{
        width: 100%;
    }

    .details__image-cta{
        font-weight: 400;
        font-size: 16px;
        line-height: 19px;
        margin: 20px 0 0;
        color: #938888;
        text-align: center;
    }

    @media (max-width: 600px){
        .details__image-cta{
            margin-top: 15px;
        }
    }

    .details__mobile-nav{
        display: none;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 60px;
        padding-right: 20px;
    }

    .details__mobile-nav-logo{
        width: 50px;
    }

    @media (max-width: 600px){
        .details__mobile-nav{
            display: flex;
        }
    }
</style>