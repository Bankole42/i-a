---
import ProjectSlide from "@components/ProjectSlide.astro";

const { id } = Astro.props;
---
<ProjectSlide className="slide" id={id}>
    <p class="slide__text">
        Feel Good is a compilation of queer love stories written by twelve of the best modern fiction writers in Nigeria today.
    </p>
</ProjectSlide>
<style>
    .slide{
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 24px;
    }

    .slide__text{
        font-size: 20px;
        line-height: 23px;
        text-align: center;
        color: #FFFFFF;
        max-width: 451px;
    }

    @media (max-width: 600px){
        .slide__text{
            max-width: 327px;
        }
    }
</style>