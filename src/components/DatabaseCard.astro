---
import { Image } from "astro:assets";

import animationImage from "../assets/images/databases/animation.jpg";
import comicsImage from "../assets/images/databases/comics.jpg";
import coversImage from "../assets/images/databases/covers.jpg";
import publishersImage from "../assets/images/databases/publishers.jpg";
import streetWearImage from "../assets/images/databases/streetwear.jpg";

const imageMap = {
  "animation": animationImage,
  "comics": comicsImage,
  "covers": coversImage,
  "publishers": publishersImage,
  "streetwear": streetWearImage,
}

export interface Props {
  id: string,
  title: string;
  count: string | number;
  url: string,
}

const {
  id,
  title,
  count,
  url
} = Astro.props;

const databaseImage = imageMap[id];
---

<div class="database">
  <div class="avatar">
    <a href={url} target="_blank" rel="noopener noreferrer">
      <Image src={databaseImage} alt={`Cover for ${title}`} />
    </a>
  </div>
  <div class="text">
    <div class="inner">
      <div class="text-name">
        <a href={url} target="_blank" rel="noopener noreferrer" class="c-link c-link--out">{ title }</a>
      </h3>
    </div>
  </div>
</div>

<style lang="scss">
  a {
    font-style: normal;
  }

  .database {
    --card-size: 72px;
    display: grid;
    gap: 24px;
    grid-template-columns: minmax(auto, var(--card-size)) 1fr;
    align-items: center;

    .avatar {
      aspect-ratio: 1;
      display: flex;
      border-radius: 50%;
      overflow: hidden;
      background: whitesmoke;
    }

    .text {
      display: flex;
      flex-direction: column;

      &-name {
        margin: 0;
        font-family: var(--font-sans);
        font-weight: normal;
        font-size: 1.8rem;
      }

      &-count {
        font-family: var(--font-sans-mono);
        margin: 0;
        font-size: 1.6rem;
      }
    }

    img {
      width: 100%;
      height: auto;
      transition: all .5s ease;
      filter: grayscale(1);
    }

    &:hover {
      img {
        filter: none;
      }
    }
  }
</style>