---

import projects from "@data/projects.json";

---

<section>
  <ul>
    {projects.map((p) => (
    <li>
      <img src={`/assets/images/projects/${p.id}.jpg`} alt={`Cover image for ${p.title}`} title={`${p.description}`} />
    </li>
    ))}
    {projects.map((p) => (
    <li>
      <img src={`/assets/images/projects/${p.id}.jpg`} alt={`Cover image for ${p.title}`} title={`${p.description}`} />
    </li>
    ))}
  </ul>
</section>


<style lang="scss">
  section {
    width: 100%;
    display: flex;
    overflow: hidden;
  }

  ul {
    display: flex;
    animation: marquee 30s linear infinite running;
    @media all and (max-width: 800px) {
	    animation-duration: 30s;
    }
  }

  @keyframes marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }

  li {
    width: 600px;
    display: inline-flex;
    padding: 12px;
  }

  img {
    width: 100%;
  }
</style>
