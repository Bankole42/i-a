---

const { className = '' } = Astro.props
---
<form class={`form ${className}`}>
    <p class="form__label">
        EMAIL UPDATES?
    </p>
    <label for="email" class="form__input-wrapper">
        <input placeholder="your@email.com" class="form__input"/>
        <button class="form__button">
            Subscribe
        </button>
    </label>
</form>
<style>
     .form{
        display: flex;
        flex-direction: column;
        row-gap: 20px;
        align-items: center;
        width: 100%;
        max-width: 360px;
    }

    @media (max-width: 600px){
        .form{
            width: 80%;
            max-width: unset;
        }
    }

    .form__label{
        font-size: 18px;
        line-height: 21px;
        margin: 0;
        text-align: center;
        width: fit-content;
    }

    .form__input-wrapper{
        display: flex;
        align-items: center;
        padding: 0 14px;
        background: #FFFFFF;
        border: 0.2px solid #000000;
        height: 53px;
        width: 100%;
        column-gap: 8px;
    }

    @media (max-width: 600px){
        .form__input-wrapper{
            padding: 0 6px;
        }
    }

    .form__input{
        flex-grow: 1;
        font-size: 16px;
        line-height: 20px;
        color: black;
        background: transparent;
        border: none;
        outline: none;
    }

    @media (max-width: 600px){
        .form__input{
            width: 80%;
            flex-shrink: 1;
        }
    }

    .form__input::placeholder{
        color: #938888;
    }

    .form__button{
        font-size: 16px;
        line-height: 20px;
        background: transparent;
        border: none;
        color: #000000;
        font-weight: 500;
        font-family: 'Soehne';
    }
</style>