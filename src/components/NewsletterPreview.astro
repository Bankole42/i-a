---
const {
  title,
  links,
  description
} = Astro.props;
---

<div class="snippet">
  <div class="head">
    <h3><a href={links.url} class="c-link c-link--out" target="_blank" referrerpolicy="origin">{title}</a></h3>
    <p>{links.title}</p>
  </div>
  <div class="body">
    <p>{description}</p>
  </div>
</div>

<style lang="scss">
  .head {
    a {
      font-style: normal;
    }

    h3 {
      margin-bottom: 0;
    }

    p {
      margin: 0;
      font-style: italic;
    }

  }
</style>