---
//Styles
import "@styles/reset.css"
import "@styles/site.css"

//Assets
import logo from "@images/logo.png"

export interface Props {
	pageTitle: string,
	pageUrl: string,
	pageImage: string,
	seoTitle?: string,
	pageDescription?: string,
	bodyClassName?: string,
	hideNav?: boolean
}

const {
		pageTitle,
		seoTitle = pageTitle, // This prop is used for when the title tag title is different from what is displayed for SEO titles
		pageUrl,
		pageImage,
		pageDescription = "A collection of publishing experiments",
		bodyClassName = "",
		hideNav = false
	} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{pageTitle}</title>

		<slot name="header-content"/>
		<meta name="title" content={seoTitle}>
		<meta name="description" content={pageDescription}>
        <meta name="viewport" content="width=device-width,initial-scale=1.0">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content={pageUrl}>
		<meta property="og:title" content={seoTitle}>
		<meta property="og:description" content={pageDescription}>
		<meta property="og:image" content={pageImage}>

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content={pageUrl}>
		<meta property="twitter:title" content={seoTitle}>
		<meta property="twitter:description" content={pageDescription}>
		<meta property="twitter:image" content={pageImage}>

		<link rel="icon" type="image/x-icon" href="favicon.ico">
	</head>
    <body class={bodyClassName}>
		{
			!hideNav && (
				<nav>
					<div class="logo">
						<a href="/">
						<img src={logo} width="60px" height="60px" alt="Logo">
						</a>
					</div>
					<ul id="menu">
						<li><a href="/about">About</a></li>
						<li><a href="https://medium.com/wuruwuru" target="_blank" rel="noopener">Journal</a></li>
						<li><a href="https://wuruwuru.notion.site/Costs-07678076eb1342298550b1f713b37f7a" target="_blank" rel="noopener">Costs</a></li>
					</ul>
					<a class="globe" href="https://twitter.com/wuruwurumag" title="@wuruwurumag" target="_blank" rel="noopener">&#127757;</a>
				</nav>
			)
		}
        <slot/>
    </body>
</html>