---
// Components
import BaseHead from '@components/BaseHead.astro';
import NavDefault from '@components/NavDefault.astro';
import DotsCursor from '@components/DotsCursor.astro';
import Footer from '@components/FooterDefault.astro';

export interface Props {
	pageTitle: string,
	pageUrl: string,
	pageImage: string,
	seoTitle?: string,
	pageDescription?: string,
}

const {
	pageTitle,
	hideNav = false
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" dir="ltr">
<BaseHead { ...Astro.props }></BaseHead>

<body>
	<NavDefault />
	<slot />
	<Footer />
	<DotsCursor client:idle />
</body>

</html>