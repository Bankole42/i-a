---
//Styles
import resetStyles from "@styles/site.css";

// Components
import BaseHead from '@components/BaseHead.astro'
import NavDefault from '@components/NavDefault.astro'

export interface Props {
	pageTitle: string,
	pageUrl: string,
	pageImage: string,
	seoTitle?: string,
	pageDescription?: string,
	bodyClassName?: string,
}

const {
		pageTitle,
		bodyClassName = "",
		hideNav = false
	} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead { ...Astro.props }></BaseHead>

	<body class={bodyClassName}>
		{!hideNav && <NavDefault />}
		<slot/>
    </body>
</html>