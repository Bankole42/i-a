---
// Components
import BaseHead from '@components/BaseHead.astro';
import NavDefault from '@components/NavDefault.astro';
import Footer from '@components/FooterDefault.astro';

export interface Props {
	pageTitle: string,
	pageUrl: string,
	pageImage: string,
	seoTitle?: string,
	pageDescription?: string,
}

const {
		pageTitle,
		hideNav = false
	} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead { ...Astro.props }></BaseHead>

	<body>
		<NavDefault />
		<slot/>
    <Footer/>
	</body>
</html>
